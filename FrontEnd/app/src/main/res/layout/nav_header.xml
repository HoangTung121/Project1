<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/nav_header_background"
    android:padding="20dp"
    android:paddingTop="50dp"
    android:paddingBottom="30dp">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical">

        <!-- Profile Image with Circle Background -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile_image"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_circle_background"
                android:padding="4dp" />

            <!-- Online Status Indicator -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/online_status_indicator"
                android:layout_margin="2dp" />

        </FrameLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn Tien"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="vtien5033@gmail.com"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.9" />

            <!-- User Level Badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Premium Member"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/user_level_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Edit Profile Button -->
        <ImageView
            android:id="@+id/edit_profile_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/edit_profile_icon"
            android:contentDescription="Edit profile"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/edit_button_background"
            android:padding="6dp" />

    </LinearLayout>

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Books Read -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books Read"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:alpha="0.3" />

        <!-- Reading Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="156h"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading Time"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:alpha="0.3" />

        <!-- Favorites -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>