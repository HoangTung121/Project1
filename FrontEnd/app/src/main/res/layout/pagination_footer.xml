<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pagination_background"
    android:padding="10dp"
    android:paddingBottom="20dp"
    android:elevation="4dp">

    <!-- Pagination Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_page_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang 1 / 5"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/tv_total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 má»¥c"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Pagination Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- First Page Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_first_page"
            style="@style/PaginationButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:enabled="false"
            app:icon="@drawable/ic_first_page"
            app:iconSize="14dp" />

        <!-- Previous Page Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_prev_page"
            style="@style/PaginationButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            app:icon="@drawable/ic_previous_page"
            app:iconSize="14dp" />

        <!-- Page Numbers Container -->
        <LinearLayout
            android:id="@+id/container_page_numbers"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <!-- Page numbers will be added dynamically -->

        </LinearLayout>

        <!-- Next Page Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_page"
            style="@style/PaginationButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_next_page"
            app:iconSize="14dp" />

        <!-- Last Page Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_last_page"
            style="@style/PaginationButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            app:icon="@drawable/ic_last_page"
            app:iconSize="14dp" />

    </LinearLayout>
</LinearLayout>
